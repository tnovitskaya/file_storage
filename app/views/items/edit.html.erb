<%= simple_form_for @item, html: {multipart: :true} do |f| %>
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
    <%= render 'error_messages' %>
      <h1>Change file</h1>

      <%= f.input :title, label: "Title" %> 
      <%= f.input :content, as: :file, label: "Choose File" %>
      <%= f.input :tags, as: :string, label: "Tags" %>
      <%= f.button :submit, "Create File" %>

      <%= link_to 'Show', @item %> |
      <%= link_to 'Back', root_path %>
    </div>
  </div>
<% end %>